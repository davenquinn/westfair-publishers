.cover-image, .rear-jacket-image
  max-width 20em
  float right
  margin-left 1em
  img
    width 100%

  p.caption
    font-size 0.9em
    margin 0
    color #888
    font-style italic

img
  max-width 100%

.cover-image img
  border 2px solid #aaa
  border-radius 6px

.holiday-message
  border: 3px solid lighten(#ff0053, 90%)
  border-radius 6px
  padding 0.5em 1em
  transition: visibility 0.5s, height 0.5s linear
  clearfix: after
  .message-body
    display flex
    flex-direction: row
    align-items center
    .image-container
      width 10em
      margin-right 1em
    img
      width 100%
    p
      flex 1
      font-style italic
      font-size 1.5em
      color #ff0053
      margin-top 0
      margin-bottom 0
  .message-controls
    display flex
    flex-direction row
    justify-content flex-end

button_color=#ff0053
a.button
  background-color lighten(button_color, 90%)
  margin-top 0.5em
  margin-right 0.5em
  border 1px solid button_color
  color button_color
  border-radius 3px
  display block
  padding 0.2em 0.5em
  font-size 0.8em
  cursor pointer
  float right
