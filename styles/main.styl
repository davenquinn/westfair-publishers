:global
  @require "./global"

.wrap
  max-width: 52em
  margin: 1em auto
  padding: 0 1em

*
  font-family: 'EB Garamond', Garamond, 'Times New Roman', serif
  font-size 18px

p,ul,ol
  line-height 1.5
  font-size 20px

main_blue=#006fdb

h2
  font-size 1.5rem
  color main_blue

h3,h4,h5,h6
  color main_blue

header

  margin-bottom 1em
  a
    text-decoration none
    &:visited
      color #0b5c9f
  h1.site-title
    font-size 3em
    color main_blue
    text-transform uppercase
    margin-bottom 0px
    margin-top 0px
  nav ul
    list-style-type none
    display flex
    flex-direction row
    padding-left 0
    a
      margin-right 1em
      display block
      padding 0.2em 1em
      border 1px solid #0079c3
      border-radius 4px
    :global(a.active)
      background-color #64a4ef
      color white
  display flex
  flex-direction: row
  img_width=10em
  .left
    width img_width
    height 4em
    margin-left 1.2em
    margin-top -1.2em
    img
      transform rotate(90deg)
      height img_width

footer
  div.right
    max-width 30em
  margin-top 2em
  color #666
  display flex
  flex-direction row
  margin-right -2em
  justify-content: space-between
  &>div
    min-width 20em
    margin-right 2em
    &:first-child
      flex-grow 1

  p
    font-size 14px
    line-height: 1.2

div.wrap
  display flex
  flex-direction column
  min-height 100vh
  div.main
    flex-grow 1

ol
  display block
  overflow hidden
  padding-left: 1.5em
